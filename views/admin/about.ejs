<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= title %></title>

    <!-- Bootstrap core CSS-->
    <link href="/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="/admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/admin/css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

      <a class="navbar-brand mr-1" href="/admin/dashboard">Admin Panel</a>

      <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Navbar -->
      <ul class="navbar-nav ml-auto ml-md-0">
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user-circle fa-fw"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="/users/logout" data-toggle="modal" data-target="#logoutModal">Logout</a>
          </div>
        </li>
      </ul>

    </nav>

    <div id="wrapper">

      <!-- Sidebar -->
     <% include ./sidebar %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin/dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">About Page</li>
          </ol>

          <!-- Page Content -->
          <h1>About Page</h1>
          <%- messages('messages', locals) %>


          <% if(errors) { %>
              <% errors.forEach(function(error){ %>
                <div class="fga alert alert-danger">
                  <%= error.msg %>
                </div>
              <% }); %>
          <% } %>

          <hr>
            <form method="POST" action="/admin/about" enctype="multipart/form-data">

              <h3>Banner Section</h3>
              <div class="form-group">
                <label for="content">Banner Content</label>
                <textarea rows="5" cols="10" id="ta" name="banner_content" class="form-control" placeholder="Content"><%= aboutBanContent %></textarea>   
              </div>
              <div class="form-group">
                <label for="image">Banner Image</label>
                <input type="file" name="banner_image" class="form-control upld" id="img">
                <input type="hidden" name="banner_image_old_img" value="<%= aboutBanImg %>">
                <img src="#" id="imgPreview" alt="" style="width:20%;margin:20px;" name="oldimg">
              </div>

              <div class="form-group">
                <label for="">Current Image</label>
                <p>
                  <% if (aboutBanImg == "") { %>
                  <img class="noimage" src="/uploads/noimage.png" alt="">
                  <% } else { %> 
                  <img class="noimage" src="/uploads/<%= aboutBanImg %>" alt="">
                  <%  } %>
                </p>
              </div>
              <hr>
              <h3>About Forward Section</h3>
              <div class="form-group">
                <label for="content">Why Forward Title</label>
                <input type="text" class="form-control" name="about_title" value="<%= aboutTitle %>">
              </div>

              <div class="form-group">
                <label for="content">Why Forward Content</label>
                <textarea rows="5" cols="10" id="ta1" name="about_content" class="form-control" placeholder="Content"><%= aboutContent %></textarea>   
              </div>
              <hr>
              <h3>Meet The Team Section</h3>
              <div class="form-group">
                <label for="content">Meet The Team Heading</label>
                <input type="text" class="form-control" name="meet_team_heading" value="<%= aboutTeamHeading %>">
              </div>
              <hr>
              <h3>Why Forward Section</h3>
              <div class="form-group">
                <label for="content">Why Forward Heading</label>
                <input type="text" class="form-control" name="why_forward_heading" value="<%= aboutWhyHeading %>">
              </div>
              <div class="form-group">
                <label for="content">Why Forward Content</label>
                <textarea rows="5" cols="10" id="ta2" name="why_forward_content" class="form-control" placeholder="Content"><%= aboutWhyContent %></textarea>   
              </div>
              <div class="form-group">
                <label for="content">Why Forward Image</label>
                <input type="file" name="why_forward_image" class="form-control upld1" id="img1">
                <input type="hidden" name="why_forward_image_old_img" value="<%= aboutWhyImg %>">
                <img src="#" id="imgPreview1" alt="" style="width:20%;margin:20px;" name="oldimg1">
              </div>
              <div class="form-group">
                <label for="">Current Image</label>
                <p>
                  <% if (aboutWhyImg == "") { %>
                  <img class="noimage" src="/uploads/noimage.png" alt="">
                  <% } else { %> 
                  <img class="noimage" src="/uploads/<%= aboutWhyImg %>" alt="">
                  <%  } %>
                </p>
              </div>
              <hr>
              <h3>Testimonial Section</h3>
              <div class="form-group">
                <label for="content">Testimonial Heading</label>
                 <input type="text" class="form-control" name="testimonial_title" value="<%=aboutTest %>">
              </div>
              <input type="hidden" name="edit_id" value="<%= id %>">
              <button class="btn btn-default">Submit</button>
              <hr>
            </form>
        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Forward 2019</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            <a class="btn btn-primary" href="/users/logout">Logout</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/admin/js/sb-admin.min.js"></script>

      <script>
        function readURL(input) {
          if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#imgPreview").attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
          }
        }
        function readURL1(input) {
          if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#imgPreview1").attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
          }
        }

        $(".upld").change(function () {
            readURL(this);
        });
        $(".upld1").change(function () {
            readURL1(this);
        });
	    </script>

  </body>

</html>
